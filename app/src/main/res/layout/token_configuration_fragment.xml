<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/dimen_18dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_36dp"
        android:text="Copilot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dropdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_36dp"
        android:text="Select Environment"
        app:layout_constraintStart_toStartOf="@+id/dropdownMenu"/>

    <AutoCompleteTextView
        android:id="@+id/dropdownMenu"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:background="@drawable/edittext_border"
        android:layout_height="wrap_content"
        android:hint="Select an option"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/dropdown_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/token_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dropdownMenu"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_36dp"
        android:text="Enter Copilot Token"
        app:layout_constraintStart_toStartOf="@+id/dropdownMenu"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:hint="@string/enter_the_token_here"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@+id/token_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50dp"
        android:text="@string/configure_token"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:backgroundTint="@color/red"
        android:layout_marginBottom="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>